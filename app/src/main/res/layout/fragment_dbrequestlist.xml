<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mypage.DBrequestlistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f0fd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="날짜"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="견주"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Something"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="정보"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="현황"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/dbday1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.9.15" />

            <TextView
                android:id="@+id/matkimi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:text="이기현" />


            <Button
                android:id="@+id/matkimiInfo1"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/pinkbutton"
                android:backgroundTint="#feefe4"
                android:text="자세히보기"
                android:textColor="#f6b278"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/request1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="수락"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/refuse1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="거절"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/dbday2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.10.19" />

            <TextView
                android:id="@+id/matkimi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="정유진" />


            <Button
                android:id="@+id/matkimiInfo2"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/pinkbutton"
                android:backgroundTint="#feefe4"
                android:text="자세히보기"
                android:textColor="#f6b278"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/request2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="수락"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/refuse2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="거절"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/dbday3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.11.21" />

            <TextView
                android:id="@+id/matkimi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="정세종" />


            <Button
                android:id="@+id/matkimiInfo3"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/pinkbutton"
                android:backgroundTint="#feefe4"
                android:text="자세히보기"
                android:textColor="#f6b278"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/request3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="수락"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/refuse3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="거절"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>