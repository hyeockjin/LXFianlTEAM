<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mypage.MKrequestlistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="날짜"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PetSitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="펫시터"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Something"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="정보"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="현황"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dbday1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.9.15" />

            <TextView
                android:id="@+id/petSitter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:text="이기현" />


            <Button
                android:id="@+id/PetSitterInfo4"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:text="자세히보기"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/request4"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="수락"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/refuse4"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="거절"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dbday2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.10.19" />

            <TextView
                android:id="@+id/petSitter5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="정유진" />


            <Button
                android:id="@+id/PetSitterInfo5"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:text="자세히보기"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/request5"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="수락"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/refuse5"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="거절"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dbday3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.11.21" />

            <TextView
                android:id="@+id/petSitter6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="정세종" />


            <Button
                android:id="@+id/PetSitterInfo6"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:text="자세히보기"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/request6"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="수락"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/refuse6"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="거절"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>